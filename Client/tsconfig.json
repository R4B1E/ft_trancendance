{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dst",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": false
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules",
        "dst"
    ]
}